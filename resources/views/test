@extends('layouts.app')

@section('content')
    <div class="grid grid-cols-3 justify-center justify-items-center p-4 border-b-2 border-[#adb071]">
        <div class="cursor-pointer left-arrow">
            <i class="fa-solid fa-angle-left text-5xl md:text-6xl"></i>
        </div>
        <div class="text-4xl font-semibold current-year md:text-6xl"></div>
        <div class="cursor-pointer right-arrow">
            <i class="fa-solid fa-angle-right text-5xl md:text-6xl"></i>
        </div>
        <div class="pt-4 col-span-3">
            <p class="text-xl text-[##99b26c] font-bold">Income</p>
        </div>
        <div class="col-span-3">
            <p class="text-2xl font-bold p-2">
                1,500.00
            </p>
        </div>
    </div>
    @php
        $currentMonth = date('F');
        $dataByMonth = [
            'January' => ['Data 1'],
            'February' => ['Data 2'],
            'March' => ['Data 3'],
            'April' => ['Data 4'],
            'May' => ['Data 5'],
            'June' => ['Data 6'],
            'July' => ['Data 7'],
            'August' => ['Data 8'],
            'September' => ['Data 9'],
            'October' => ['Data 10'],
            'November' => ['Data 11'],
            'December' => ['Data 12'],
            // Include data for other months as needed
        ];
    @endphp
    <div class="grid md:grid-cols-4 max-sm:grid-cols-2 gap-4 p-4">
        @foreach($dataByMonth as $month => $data)
            @if(strtotime($month) <= strtotime($currentMonth))
                <a href="{{ route('months', ['year' => date('Y'), 'month' => strtolower($month)]) }}">
                <div class="bg-[var(--card)] rounded-lg p-4">
                    <div class="font-bold text-2xl text-center font-bold mb-2">
                        {{ $month }}
                    </div>
                    <div class="text-gray-700 text-center">
                        @foreach($data as $item)
                        <p>{{ $item }}</p>
                        @endforeach
                    </div>
                </div>
            @endif
        @endforeach
    </div>

    <script>
        const currentYearElement = document.querySelector('.current-year');
        const leftArrowElement = document.querySelector('.left-arrow');
        const rightArrowElement = document.querySelector('.right-arrow');

        // Get the current year
        const currentYear = new Date().getFullYear();
        currentYearElement.textContent = currentYear;

        // Event listener for left arrow click
        leftArrowElement.addEventListener('click', () => {
            const updatedYear = parseInt(currentYearElement.textContent) - 1;
            currentYearElement.textContent = updatedYear;
        });

        // Event listener for right arrow click
        rightArrowElement.addEventListener('click', () => {
            const updatedYear = parseInt(currentYearElement.textContent) + 1;
            currentYearElement.textContent = updatedYear;
        });
    </script>
@endsection
