    @php
        $daysInMonth = cal_days_in_month(CAL_GREGORIAN, $month, $year);
    @endphp
    <div class="grid md:grid-cols-1 max-sm:grid-cols-1 gap-4 p-4">
        <table>
            @for($day = 1; $day <= $daysInMonth; $day++)
                @php
                    $date = date("j", mktime(0, 0, 0, $month, $day, $year));
                    $dayName = date("l", mktime(0, 0, 0, $month, $day, $year));
                @endphp
                <tr>
                    <td class="border-b-2 p-1">{{ $date }} - {{ $dayName }}</td>
                </tr>
            @endfor
        </table>
    </div>
    {{-- <script>
        const minus = document.querySelector(".minus");
        const plus = document.querySelector(".plus");
        const monthElement = document.querySelector(".month");
        let month = parseInt(monthElement.textContent);
        const monthNames = [
            "January",
            "February",
            "March",
            "April",
            "May",
            "June",
            "July",
            "August",
            "September",
            "October",
            "November",
            "December"
        ];

        monthElement.textContent = monthNames[month - 1];
        minus.addEventListener("click", () => {
            if (month > 1) {
                month--;
            } else {
                month = 1;
            }
            monthElement.textContent = monthNames[month - 1];
        });
        plus.addEventListener("click", () => {
            if (month < 12) {
                month++;
            } else {
                month = 12;
            }
            monthElement.textContent = monthNames[month - 1];
        });
    </script> --}}
